<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Investor.InvestorSignIn">

    <Button
        android:id="@+id/investorSignin"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Signin"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:paddingRight="55dp"
        android:paddingLeft="67dp"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="#D83F0F"
        />

    <Button
        android:id="@+id/investorSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_alignParentRight="true"
        android:paddingLeft="55dp"
        android:paddingRight="67dp"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textColor="#172674"
        android:background="@android:color/white"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="48dp"
        android:background="#F10A11"
        android:paddingBottom="83dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:src="@drawable/user"
            android:paddingTop="20dp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="40dp"
            android:layout_marginTop="30dp"
            style="@style/Base.TextAppearance.AppCompat.Large"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@android:color/white"
            android:textSize="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            style="@style/Base.TextAppearance.AppCompat.Large"
            />
        <EditText
            android:id="@+id/investorEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text"
            android:text="Enter email"
            android:textColor="#132EC9"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:padding="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="@android:color/white"
            android:textSize="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            style="@style/Base.TextAppearance.AppCompat.Large"
            />
        <EditText
            android:id="@+id/investorPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text"
            android:text="Enter the password"
            android:textColor="#132EC9"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:padding="10dp"
            />
        <Button
            android:id="@+id/investorBtnIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textStyle="bold"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textSize="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/edit_text"
            android:layout_marginRight="120dp"
            android:layout_marginLeft="120dp"
            android:textColor="@android:color/white"
            android:backgroundTint="#1836C7"
            style="@style/Base.TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forget Password?"
            android:textSize="25dp"
            android:textStyle="italic"
            android:textColor="@android:color/white"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="180dp"
            />

    </LinearLayout>

</RelativeLayout>